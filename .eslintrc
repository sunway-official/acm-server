{
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["tests/**/*.js"]
      }
    ],
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "trailingComma": "all", "printWidth": 80 }
    ]
  }
}
